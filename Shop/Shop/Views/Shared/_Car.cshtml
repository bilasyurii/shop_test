@model Shop.Core.Entities.Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.ImageURL" alt="@Model.Name" />

    <h2>@Model.Name</h2>

    <p>@Model.ShortDescription</p>

    <p>Price: @Model.Price.ToString("c")</p>

    <p>
        <a class="btn btn-warning" href="#">More</a>
    </p>
</div>